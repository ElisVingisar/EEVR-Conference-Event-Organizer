generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Speaker {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  picture   String?  // Nullable because it might be uploaded later
  info      String?
  talkTitle String
  slides    String?  // URL or file path to the uploaded presentation slides
  createdAt DateTime @default(now())
}

